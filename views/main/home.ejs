	<script>
        /***************************************  maintain aspect ratio  ************************************/

        const maintainAspectRatio = img => {
            imgWidth = img.width;
            imgHeight = img.height;
            if (imgWidth > imgHeight) {
                img.style.width = '100%';
            } else {
                img.style.height = '100%';
            }
            console.log('Image width = ' + imgWidth);
            console.log('Image height = ' + imgHeight);
        };

	</script>
